<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
    <TextView
        android:id="@+id/currentWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Weather"
        android:fontFamily="@font/outfitsemibold"
        android:textSize="35sp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updated"
        android:fontFamily="@font/outfitmedium"
        android:layout_below="@id/currentWeather"
        android:layout_marginStart="24dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardV"
        android:layout_below="@id/updated"
        android:backgroundTint="#0B1420"
        android:layout_width="500dp"
        android:layout_height="250dp"
        app:cardCornerRadius="18dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/city"
            android:fontFamily="@font/outfitsemibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="40sp"
            />

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfitmedium"
                android:layout_below="@+id/city"
                android:textColor="#FFB300"
                android:layout_marginStart="20dp"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfitmedium"
                android:layout_below="@+id/city"
                android:layout_toEndOf="@id/temp"
                android:layout_marginStart="22dp"
                android:textColor="#039BE5"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfitregular"
                android:layout_below="@+id/description"
                android:layout_marginStart="20dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfitregular"
                android:layout_below="@+id/temp"
                android:layout_marginStart="20dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/city"/>

            <TextView
                android:id="@+id/sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/outfitregular"
                android:layout_below="@+id/date"
                android:layout_marginStart="20dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/sunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfitregular"
                android:layout_below="@+id/sunrise"
                android:layout_marginStart="20dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfitregular"
                android:layout_below="@+id/sunset"
                android:layout_marginStart="20dp"
                android:textSize="16sp"/>
            <TextView
            android:id="@+id/windSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfitregular"
            android:layout_below="@+id/humidity"
            android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
            android:textSize="16sp"/>
            <ProgressBar
                android:id="@+id/pBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"/>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/otherCities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Cities"
        android:fontFamily="@font/outfitsemibold"
        android:textSize="22sp"
        android:layout_below="@+id/cardV"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noInternet"
        android:fontFamily="@font/outfitmedium"
        android:layout_below="@id/otherCities"
        android:layout_marginStart="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/citiesRv"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noInternet"/>




</RelativeLayout></layout>